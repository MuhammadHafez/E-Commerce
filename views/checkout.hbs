<div style="padding-top: 30px;" class="col-md-6 offset-md-3">
    <div class="alert alert-danger d-none" id="payment-errors">

    </div>

    {{#if checkoutError}}
    <div class="alert alert-danger" id="checkout-error">
        {{checkoutError}}
    </div>
    {{/if}}

    <form action="/checkout" method="post" id="checkout-form">
        <div class="form-group">
            <label for="Name">Name :</label>
            <input type="text" name="name"  value="{{user.username}}" placeholder="Please enter your name..." class="form-control" id="">
        </div>

        <div class="form-group">
            <label for="Address">Address :</label>
            <input type="text" name="address" value="{{user.address}}" placeholder="Please enter your address..." class="form-control" id="">
        </div>

        <div class="form-group">
            <label for="Address">Contact :</label>
            <input type="text" name="contact" value="{{user.contact}}" placeholder="Please enter your contact..." class="form-control" id="">
        </div>

        <div class="form-group">
            <label for="CreditCard Name">CreditCard Name :</label>
            <input type="text" name="CreditCard Name" placeholder="Please enter your CreditCard Name..."
                class="form-control" id="">
        </div>

        <div class="form-group">
            <label for="CreditCard Number">CreditCard Number :</label>
            <input type="number" name="CreditCard Number" placeholder="Please enter your CreditCard Number..."
                class="form-control" id="card-number">
        </div>

        <div class="row">
            <div class="form-group col-4">
                <label for="Exp Month"> Exp Month :</label>
                <input type="number" name="Exp Month" placeholder="Please enter your Exp Month..." class="form-control"
                    id="card-expiry-month">
            </div>
            <div class="form-group col-4">
                <label for="Exp Year"> Exp Year :</label>
                <input type="number" name="Exp Year" placeholder="Please enter your Exp Year..." class="form-control"
                    id="card-expiry-year">
            </div>
            <div class="form-group col-4">
                <label for="CVC">CVC :</label>
                <input type="number" name="CVC" placeholder="Please enter your CVC..." class="form-control"
                    id="card-cvc">
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">CheckOut $ {{TotalPrice}}</button>
        </div>
    </form>
</div>


<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="/javascripts/checkout.js"></script>